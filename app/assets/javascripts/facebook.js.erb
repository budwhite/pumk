$(function() {
  $('body').prepend('<div id="fb-root"></div>');
  return $.ajax({
    url: window.location.protocol + "//connect.facebook.net/en_US/all.js",
    dataType: 'script',
    cache: true
  });
});

window.fbAsyncInit = function() {
  FB.init({
    appId: '<%= ENV['FACEBOOK_APP_ID'] %>',
    status: true,
    cookie: true
  });
  $('#sign_in').click(function(e) {
    e.preventDefault();

    return FB.login(
      function(response) {
      if (response.authResponse) {
        // Sprockets is evaluating the ERB outside of the context of Rails app
        // so we need a little help from the url_helpers
        <% url = Rails.application.routes.url_helpers %>
        return window.location = '<%= url.send(:user_omniauth_callback_path, :facebook) %>';
      }
    }, { scope: 'email' }
    );
  });
  return $('#sign_out').click(function(e) {
    FB.getLoginStatus(function(response) {
      if (response.authResponse) {
        return FB.logout();
      }
    });
    return true;
  });
};
