<% flash.each do |name, msg| %>
  <div class='alert alert-success'>
    <a class='close' data-dismiss='alert'>&#215;</a>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  </div>
<% end %>

<div class='alert alert-info'>
  <a class='close' data-dismiss='alert'>&#215;</a>
  <h3>Welcome to PickUpMyKid!</h3>
  <h5>
    <span class='label label-warning'>Heads Up!</span>
    PickUpMyKid has been overwhelmed by demand so we apologize in advance if your request cannot be satisfied promptly. Please do sign up to tell us your service request, so that we'll be able to offer our early-bird discounts: one week of free rides.
  </h5>
</div>

<div class='jumbotron'>
  <h1>Safe and Reliable Transportation for Your Kids!</h1>
  <p class='lead'>We offer door-to-door child pick-up/drop-off chauffeuring services for summer camps, day care/after school care, doctor appointments, extracurricular activities and more.
  </p>
  <a class='btn btn-large btn-success' href='#loginModal' data-toggle='modal'>Sign up today</a>
  <h3>
    Or Call <a href='tel:8162378889'><%= number_to_phone(8162378889, area_code: true) %></a> to make a reservation
  </h3>

</div>

<hr>

<div class='row-fluid marketing'>
  <div class='span12'>
    <h2>We are parents too</h2>
    <ul>
      <li>Our drivers are all parents who drive their own kids everyday.</li>
      <li>All drivers have valid drivers' licenses and have undergone thorough background screenings.</li>
      <li>Our drivers are also CPR and First Aid certified.</li>
    </ul>

    <h2>Safety is our top priority</h2>
    <ul>
      <li>We notifiy parents via text message when a child is dropped off at destination.</li>
      <li>Our cars and vans are well maintained and equipped with a First Aid Kit, GPS and Cell phone. Carseats and boosters are used in accordance with law.</li>
    </ul>

    <h2>Rate</h2>
    <p>One way trip $10 up to 10 miles. Call us for weekly or other arrangement.</p>
  </div>
</div>

<% if false %>
<div class='row-fluid'>

  <div class='span6'>

    <%= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
      <legend>Sign in</legend>
      <% if session[:signup_fail].nil? %>
        <%= render 'show_flash' %>
      <% end %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class='icon-signin'></i>
        Log In
      <% end %>
      <%= link_to "Forgot your password?", new_password_path('user') %>
    <% end %>

  </div>

  <div class='span6'>

    <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }, validate: true do |f| %>
      <legend>Sign up</legend>
      <% if !session[:signup_fail].nil? %>
        <%= render 'show_flash' %>
        <% session.delete(:signup_fail) %>
      <% end %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email, validate: true %>
      <%= f.input :password, validate: true  %>
      <%= f.input :password_confirmation, validate: true %>
      <%= f.input :verified, as: :hidden, input_html: { checked: false } %>
      <%= f.button :submit, 'Register', class: 'btn-success' %>
    <% end %>

  </div>
</div>
<% end %>

<div id='loginModal' class='modal hide fade'>
  <%= simple_form_for @user, 
    url: url_for(action: 'create', controller: 'users'),
    html: { class: 'form-horizontal' }, validate: true do |f| %>
    <div class='modal-header'>
      <button type='button' class='close' data-dismiss='modal'>Ã—</button>
      <h3 id='myModalLabel'>Please fill out the form below:</h3>
    </div>
    <div class='modal-body'>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email, validate: true %>
      <%= f.input :phone_number, validate: true  %>
      <%= f.input :comment, input_html: { rows: 5 } %>
    </div>
    <div class='modal-footer'>
      <button class='btn' data-dismiss='modal'>Close</button>
      <%= f.button :submit, 'Submit', class: 'btn-success' %>
    </div>
  <% end %>
</div>
