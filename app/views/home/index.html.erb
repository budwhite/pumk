<div class='row-fluid'>

  <div class='span6'>

    <%= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
      <legend>Sign in</legend>
      <% if session[:signup_fail].nil? %>
        <%= render 'show_flash' %>
      <% end %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class='icon-signin'></i>
        Log In
      <% end %>
      <%= link_to "Forgot your password?", new_password_path('user') %>
    <% end %>

  </div>

  <div class='span6'>

    <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }, validate: true do |f| %>
      <legend>Sign up</legend>
      <% if !session[:signup_fail].nil? %>
        <%= render 'show_flash' %>
        <% session.delete(:signup_fail) %>
      <% end %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email, validate: true %>
      <%= f.input :password, validate: true  %>
      <%= f.input :password_confirmation, validate: true %>
      <%= f.input :verified, as: :hidden, input_html: { checked: false } %>
      <%= f.button :submit, 'Create New User', class: 'btn-success' %>
    <% end %>

  </div>
</div>

