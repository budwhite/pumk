<% rider = User.find(@ridership.user_id) %>
<% ride = Ride.find(@ridership.ride_id) %>
<% driver = ride.driver %>
<% if @offering %>
  <% asker = driver %>
<% else %>
  <% asker = rider %>
<% end %>

<div class='row'>
  <div class='span12'>
    <h2>Hooray! You've accepted <%= asker.first_name %>'s request!</h2>
    <p>
      Here's <%= asker.first_name %>'s email and phone number so you can get in contact directly:
    </p>
  </div>
</div>

<div class='row'>
  <div class='span1'>
    <p>
    <%= image_tag asker.profile_photo('normal'), class: 'img-polaroid' %>
    </p>
  </div>
  <div class='span4'>
    <p>
    <i class='icon-phone icon-large'></i>
    <a href='tel:<%= asker.phone_number %>'><%= number_to_phone(asker.phone_number) %></a>
    </p>
    <p>
    <i class='icon-envelope icon-large'></i>
    <a href='mailto:<%= asker.email %>'><%= asker.email %></a>
    </p>
  </div>
</div>

<div class='row'>
  <div class='span8'>
    <%= link_to 'Back to Home', user_path(current_user), class: 'btn btn-primary' %>
  </div>
</div>
