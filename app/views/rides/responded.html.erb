<% rider = User.find(@ridership.user_id) %>
<% ride = Ride.find(@ridership.ride_id) %>

<div class='row'>
  <div class='span12'>
    <h2>Hooray! You've accepted <%= rider.first_name %>'s request!</h2>
    <p>
      Here's <%= rider.first_name %>'s email and phone number so you can get in contact directly:
    </p>
  </div>
</div>

<div class='row'>
  <div class='span1'>
    <p>
    <%= image_tag rider.profile_photo('normal'), class: 'img-polaroid' %>
    </p>
  </div>
  <div class='span4'>
    <strong><%= rider.email %></strong>
    <strong><%= rider.phone_number %></strong>
  </div>
</div>

<div class='row'>
  <div class='span8'>
    <%= link_to 'Back to Home', user_path(current_user), class: 'btn btn-primary' %>
  </div>
</div>
