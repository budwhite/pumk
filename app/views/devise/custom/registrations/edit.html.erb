<% cu = current_user %>

<% if !cu.verified? %>
  
  <div class='alert alert-info'>
    <a class='close' data-dismiss='alert'>&#215;</a>
    <h2>Welcome to PickUpMyKid for Cherry Crest!</h2>
    <p>Please complete your parent profile below before you start finding or posting rides.</p>
  </div>
  
<% end %>

  <ul class='nav nav-tabs'>
    <li class='active'><a href='#address' data-toggle='tab'>My Addresses</a></li>
    <li><a href='#kids' data-toggle='tab'>My Kid(s)</a></li>
    <li><a href='#personal' data-toggle='tab'>Personal Info</a></li>
  </ul>

  <div class='tab-content'>
    <div class='tab-pane active' id='address'>
      <div class='alert alert-info alert-block'>
        <h4>My Addresses</h4>
        Addresses entered here will be used later when you post a request for or offer a ride, such as your home, work or kids afterschool addresses.
      </div>
      <%= render 'address_edit' %>
    </div>
    <div class='tab-pane' id='kids'>
      <%= render 'child_edit' %>
    </div>
    <div class='tab-pane' id='personal'>
      <%= render 'personal_edit' %>
    </div>
  </div>
