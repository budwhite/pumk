<div class='row'>
  <div class='span3'>
    <%= image_tag current_user.profile_photo('large'), class: 'img-polaroid' %>
  </div>
  <div class='span5'>
    <h2 class='page-header'><%= current_user.name %></h2>
    <h3><i class='icon-ok icon-large'></i>Facebook connected</h3>
    <h3><i class='icon-ok icon-large'></i>Verified parent</h3>
  </div>
</div>

<%# if current_user.addresses.count==0 && current_user.children.count==0 %>
  <%if true %>
  <div class='row'>

    <div class='span6'>
      <h2>Completing Registration</h2>
      <%= simple_form_for current_user, :html => { 
        class: 'form-horizontal',
        multipart: true
      } do |f| %>
        <%= field_set_tag 'Where do you live?' do %>
          <%= f.simple_fields_for :addresses do |addresses_form| %>
            <%= addresses_form.input :street1 %>
            <%= addresses_form.input :street2 %>
            <%= addresses_form.input :city %>
            <%= addresses_form.input :state %>
            <%= addresses_form.input :zipcode %>
            <%= addresses_form.input :name, as: :hidden, input_html: { value: 'Home' } %>
          <% end %>
        <% end %>
        <%= field_set_tag 'Tell us about your kids!' do %>
          <%= f.simple_fields_for :children do |children_form| %>
            <%= children_form.input :name %>
            <%= children_form.input :gender, collection: ['boy', 'girl'], default: 'boy' %>
            <%= children_form.input :grade, collection: Child::GRADE_TYPES, input_html: { class: 'input-mini' } %>
            <%= children_form.input :teacher %>
          <% end %>
        <% end %>
        <%= f.submit 'Submit', :class => 'btn btn-primary'  %>
      <% end %>
    </div>

    <div class='span4'>
      <br></br>
      <br></br>
      <br></br>
      <div class='alert alert-info'>
        <p class='lead'>
        Why are we asking for your address?
        </p>
        <p>
        <small>
          We find carpool matches that are physically closest to you.
        </small>
        </p>
      </div>
      <br></br>
      <br></br>
      <br></br>
      <br></br>
      <div class='alert alert-info'>
        <p class='lead'>
        Why tell us about your kid?
        </p>
        <p>
        <small>
          This is an effort ot make sure everyone is a genuine member of your school community.
        </small>
        </p>
      </div>
    </div>
  </div>

<% else %>


  <div class='row'>
    <div class='span8'>
      <h2 class='page-header'>
        <%= pluralize(current_user.children.count, 'Child').split[1] %>
      </h2>
    </div>
  </div>

  <div class='row'>
    <% current_user.children.each do |c| %>
      <div class='span2'>
        <%= image_tag '/assets/default_female.jpg', class: 'img-polaroid' %>
      </div>
      <div class='span6'>
        <strong><%= c.name.titleize %></strong>
        <% if !c.grade.nil? %>
          <p>Grade <%= c.grade %></p>
        <% end %>
        <% if !c.teacher.nil? %>
          <p>Teacher <%= c.teacher %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class='row'>
    <div class='span8'>
      <h2 class='page-header'>
        <%= pluralize(current_user.addresses.count, 'Address').split[1] %>
      </h2>
    </div>
  </div>

  <div class='row'>
    <% current_user.addresses.each do |a| %>
      <div class='span8'>
        <address>
          <strong><%= a.name %></strong><br>
          <%= a.street1 %><br>
          <%= a.city %>, <%= a.state %> <%= a.zipcode %><br>
        </address>
      </div>
    <% end %>
  </div>

<% end %>
